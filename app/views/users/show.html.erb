<h1><%= @user.username %>'s Profile</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<% if current_user && current_user.id == @user.id %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Delete my account', @user, method: :delete, data: { confirm: 'Are you sure you want to delete your account?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
