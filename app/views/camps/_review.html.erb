<% @camp.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <% if review.user != nil %>
      <em>by <%= review.user.username %></em>
      Added on: <%= review.created_at %>
    <% end %>
    <% if current_user && (current_user.id == review.user_id) %>
      <%= link_to 'Edit',  edit_camp_review_path(review.camp_id, review.user_id) %>
    <% end %>
  </p>
<% end %>